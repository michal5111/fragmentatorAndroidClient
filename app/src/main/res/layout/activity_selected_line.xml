<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SelectedLineActivity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/SelectedLineTitleTextView" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="24sp" android:textAlignment="center" android:textStyle="bold"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/SelectedLineTimeTextView" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/SelectedLineTitleTextView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textSize="18sp"
            android:textAlignment="center" android:textStyle="bold"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/SelectedLineTextView"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/SelectedLineTimeTextView" android:textAlignment="center"
            android:textSize="18sp"/>
    <com.android.volley.toolbox.NetworkImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/SelectedLineImageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/SelectedLineProgressBar"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/SelectedLineTextView"/>
    <Button
            style="?buttonBarButtonStyle"
            android:text="Wybierz"
            android:layout_width="218dp"
            android:layout_height="49dp"
            android:id="@+id/SelectedLineDownloadButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/SelectedLineImageView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="1.0"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SelectedLineProgressBar"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="236dp" app:layout_constraintBottom_toTopOf="@+id/SelectedLineDownloadButton"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/SelectedLineImageView"/>
</androidx.constraintlayout.widget.ConstraintLayout>